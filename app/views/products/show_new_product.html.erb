<div class="category-container">
<% @products.each do |product| %> 
  <div class="card" >
    <% if product.picture.attached? %>
    <%= image_tag product.picture,class:"card-img-top" %>
    <% else %>
    <%= image_tag 'default.png',class:"card-img-top" %>
    <% end %>
      <div class="card-body">
        <h5 class="card-title"><%= product.name %></h5>
        <p class="card-text"><%= product.description %></p>  
        <%= link_to 'View Product',products_path(product), class:'btn btn-primary' %>
        
        <%= link_to 'Delete Product',products_path(product), method: :delete, data: {confirm: "Are you sure"}, class:'btn btn-danger' if current_user.id = product.user_id || current_user.is_admin? %>
      </div>
    
  </div>
<% end %>
</div>