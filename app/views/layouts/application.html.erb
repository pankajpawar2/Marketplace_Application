<!DOCTYPE html>
<html>
  <head>
    <title>MarketplaceApplication</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="page-container">

    <nav class="navbar navbar-expand-lg navbar-light" style="background-color: lightgrey;">
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
    <div class="navbar-nav">
    <% if user_signed_in? %>
    <% if current_user.is_admin? %>
      <%= link_to "Show new products", categories_path,class:'nav-item nav-link' %>
      <%= link_to "Add Category", categories_new_path,class:'nav-item nav-link' %>
      <%= link_to "Admin Centre", categories_path,class:'nav-item nav-link' %>
      <%= link_to "Logout", destroy_user_session_path, method: :delete,class:'nav-item nav-link' %>


    <% else %>
    <%= link_to "Buy Handicraft", categories_path,class:'nav-item nav-link' %>
    <%= link_to "Sell Your Handicraft", new_product_path,class:'nav-item nav-link' %>
    <%= link_to "My Products Listing", user_products_path,class:'nav-item nav-link' %>
    <%= link_to "Logout", destroy_user_session_path, method: :delete,class:'nav-item nav-link' %>
    <% end %>    

  <% else %>
    <%= link_to "Home", root_path,class:'nav-item nav-link' %>
    <%= link_to "For Buyers", categories_path,class:'nav-item nav-link' %>
    <%= link_to "For Sellers", new_product_path,class:'nav-item nav-link' %>
    <%= link_to "Sign Up", new_user_registration_path,class:'nav-item nav-link' %>
    <%= link_to "Login", new_user_session_path,class:'nav-item nav-link' %>
  <% end %>
  </div>
</div>
</nav>
<% if notice || alert %>
    <p class="notice"><h4><%= notice %></h4></p>
    <p class="alert"><h4><%= alert %></h4></p>
<% end %> 
  <%= yield %>
  </div>
  </body>
</html>

